<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="#ff05a126"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contentCard"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVIDAD6"
            android:id="@+id/tv_actividad"
            android:textSize="18sp"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASSIGNED"
            android:id="@+id/tv_estado"
            android:layout_below="@+id/tv_actividad"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Energia del sitio"
            android:id="@+id/tv_tipo"
            android:layout_below="@+id/tv_actividad"
            android:layout_alignLeft="@+id/tv_actividad"
            android:layout_alignStart="@+id/tv_actividad"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:id="@+id/tv_duracion"
            android:textColor="#ffffffff"
            android:layout_below="@+id/tv_tipo"
            android:layout_toRightOf="@+id/textView18"
            android:layout_toEndOf="@+id/textView18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duración:"
            android:id="@+id/textView18"
            android:textColor="#ffffffff"
            android:layout_below="@+id/tv_tipo"
            android:layout_alignLeft="@+id/tv_actividad"
            android:layout_alignStart="@+id/tv_actividad"
            android:layout_marginRight="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código:"
            android:id="@+id/textView20"
            android:textColor="#ffffffff"
            android:layout_below="@+id/textView18"
            android:layout_alignLeft="@+id/textView18"
            android:layout_alignStart="@+id/textView18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APOQ"
            android:id="@+id/tv_codigo"
            android:textColor="#ffffffff"
            android:layout_above="@+id/tv_nombre"
            android:layout_alignLeft="@+id/tv_duracion"
            android:layout_alignStart="@+id/tv_duracion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APOQUINDO"
            android:id="@+id/tv_nombre"
            android:layout_alignTop="@+id/textView24"
            android:layout_alignLeft="@+id/tv_codigo"
            android:layout_alignStart="@+id/tv_codigo"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre:"
            android:id="@+id/textView24"
            android:layout_below="@+id/textView20"
            android:layout_alignLeft="@+id/textView20"
            android:layout_alignStart="@+id/textView20"
            android:textColor="#ffffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-2-01"
            android:id="@+id/tv_fecha"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffffff" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_complete"
            android:background="@drawable/custom_button_rounded_green"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:onClick="onClick_Complete"
            android:src="@drawable/ic_action_complete_activity" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_map"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/card_complete"
            android:layout_toStartOf="@+id/card_complete"
            android:background="@drawable/custom_button_rounded_green"
            android:padding="4dp"
            android:onClick="onClick_Map"
            android:src="@drawable/ic_action_map_activity"
            android:layout_marginRight="6dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>